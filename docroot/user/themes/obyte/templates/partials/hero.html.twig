<section id="{{ id }}" class="section modular-hero hero {{ page.header.hero_classes }} {{ page.header.background.parallax ? 'parallax' : '' }}" {% if hero_image %}style="background-image: url('{{ hero_image.url }}');"{% endif %}>
    <div class="image-overlay"></div>
    <section class="container {{ grid_size }}">
        <div class="flex-block d-flex justify-content-between">
            <div class="text-block text-left">
                {{ content | raw }}
                <div class="btn-block">
                    <a href="" class="btn">Download wallet</a>
                </div>
            </div>
            <div class="img-block" id="clip-container"></div>
            <script>
            window.addEventListener('load', () => {
              const container = document.getElementById('clip-container')
              const scene1 = `
                <object style="pointer-events: none;" type="image/svg+xml" data="../../user/themes/obyte/assets/animation/scene1.svg">
                   <img src="{{ url('theme://assets/hero-image.png') }}" alt="">
                </object>
              `
              const scene2 = `
                <object style="pointer-events: none;" type="image/svg+xml" data="../../user/themes/obyte/assets/animation/scene2.svg">
                   <img src="{{ url('theme://assets/hero-image.png') }}" alt="">
                </object>
              `
              const scene3 = `
                <object style="pointer-events: none;" type="image/svg+xml" data="../../user/themes/obyte/assets/animation/scene3.svg">
                   <img src="{{ url('theme://assets/hero-image.png') }}" alt="">
                </object>
              `
              function reload () {
                container.innerHTML = scene1
                if (this.scene2Timeout != null) {
                  clearTimeout(this.scene2Timeout)
                  this.scene2Timeout = null
                }
                if (this.scene3Timeout != null) {
                  clearTimeout(this.scene3Timeout)
                  this.scene3Timeout = null
                }
                this.scene2Timeout = setTimeout(() => {
                  this.scene2Timeout = null
                  container.innerHTML = scene2
                }, 12000)
                this.scene3Timeout = setTimeout(() => {
                  this.scene3Timeout = null
                  container.innerHTML = scene3
                }, 58000)
              }

              container.addEventListener('click', () => {
                reload()
              })

              reload()
            })</script>
        </div>
    </section>
{#    <i id="to-start" class="pulse fa fa-angle-down"></i> #}
</section>
